<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50sp"
    android:layout_marginBottom="50sp"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity"> <!-- Top bar with title and dark mode switch -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ahaan bot"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchDark"
            android:layout_width="125dp"
            android:layout_height="52dp"
            android:text="Dark Mode" />

    </LinearLayout> <!-- RecyclerView for chat messages --> <!-- Input row -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="399dp"
        android:layout_height="582dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="18dp" />

    <LinearLayout
        android:id="@+id/inputRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingBottom="10sp"> <!-- Mic button -->
        <ImageButton
            android:id="@+id/btnMic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Mic"
            android:src="@android:drawable/ic_btn_speak_now" /> <!-- EditText input -->
        <EditText
            android:id="@+id/etPrompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_bg"
            android:hint="Ask Gemini..."
            android:inputType="textMultiLine"
            android:padding="10dp" /> <!-- Send button -->
        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send"
            android:src="@android:drawable/ic_menu_send" />
    </LinearLayout>
</LinearLayout>