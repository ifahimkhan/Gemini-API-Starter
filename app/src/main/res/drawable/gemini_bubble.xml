<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/gemini_bubble.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bubble color -->
    <solid android:color="#E0E0E0"/> <!-- Light gray background -->

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD"/>

    <!-- Optional padding inside the bubble -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>
